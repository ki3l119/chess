{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
